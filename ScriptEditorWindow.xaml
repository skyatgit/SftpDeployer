<ui:FluentWindow x:Class="SftpDeployer.ScriptEditorWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                  Title="编辑脚本 (YAML)" Width="700" Height="560" WindowStartupLocation="CenterOwner"
                  ExtendsContentIntoTitleBar="True">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="脚本为 YAML 格式，键为 before_script / after_script。两处的命令都会通过 SSH 在远程服务器上执行。\n可在命令中使用变量，例如：${FILE_NAME}、${SERVER_ALIAS} 等。" TextWrapping="Wrap" Opacity="0.8"/>
        <Grid Grid.Row="1" Margin="0,8,0,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="Editor" FontFamily="Consolas" FontSize="13" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextWrapping="NoWrap"/>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="确定" Width="100" Margin="0,0,8,0" Click="OnOkClick"/>
            <Button Content="取消" Width="100" Click="OnCancelClick"/>
        </StackPanel>
    </Grid>
</ui:FluentWindow>